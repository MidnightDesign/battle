{
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "rules": {
        "interface-name": {
            "options": [
                "never-prefix"
            ]
        },
        "quotemark": {
            "options": [
                "single"
            ]
        }
    },
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts",
            "coverage/lcov-report/*.js"
        ]
    }
}
